@model Movie

<form method="post">
    <label asp-for="Title">Title:</label>
    <input asp-for="Title" class="form-control" required />
    <br />
    <label asp-for="CategoryId">Category:</label>
    <select class="form-select" asp-for="CategoryId">
        <option value="">Select a Category</option>
        @foreach (Category m in ViewBag.Categories)
        {
            <option value="@m.CategoryId">@m.CategoryName</option>
        }
    </select>
    <br />

    <label asp-for="Director">Director:</label>
    <input asp-for="Director" class="form-control" required />
    <br />

    <label asp-for="Year">Year:</label>
    <input asp-for="Year" class="form-control" type="number" min="1888" max="@DateTime.Now.Year" required />
    <br />

    <label asp-for="Rating">Rating:</label>
    <select asp-for="Rating" class="form-select">
        <option value="">Choose an option</option>
        <option selected="@(Model.Rating == "NR")" value="NR">NR</option>
        <option selected="@(Model.Rating == "G")" value="G">G</option>
        <option selected="@(Model.Rating == "PG")" value="PG">PG</option>
        <option selected="@(Model.Rating == "PG-13")" value="PG-13">PG-13</option>
        <option selected="@(Model.Rating == "R")" value="R">R</option>
    </select>
    <br />

    <label asp-for="Edited">Was this movie edited?</label>
    <select asp-for="Edited" class="form-select">
        <option value="">Choose an option</option>
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />

    <label asp-for="LentTo">Lent To (if applicable):</label>
    <input asp-for="LentTo" class="form-control" />
    <br />


    <label asp-for="CopiedToPlex">Was this Copied to Plex?</label>
    <select asp-for="CopiedToPlex" class="form-select">

        <option value="">Choose an option</option>
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />
    <label asp-for="Notes">Notes (Max 25 chars):</label>
    <input asp-for="Notes" class="form-control" maxlength="25" />
    <br />

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
